<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.QiblaFinder" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Enable edge-to-edge by default -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Support display cutouts -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Samsung/One UI specific configurations -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Force immersive mode -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Android 12+ specific for Samsung devices -->
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
</resources>